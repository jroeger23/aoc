{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Stack - Test",
      "type": "process",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "command": "stack",
      "args": [
        "test"
      ]
    },
    {
      "label": "Stack - Build",
      "type": "process",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "stack",
      "args": [
        "build"
      ]
    },
    {
      "label": "Stack - run AoC solver",
      "type": "process",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "stack",
      "args": [
        "run",
        "--",
        "${input:solver}",
        "${workspaceFolder}/inputs/${input:solver}"
      ]
    }
  ],
  "inputs": [
    {
      "id": "solver",
      "type": "promptString",
      "description": "AoC Solver name",
      "default": "no solver"
    }
  ]
}